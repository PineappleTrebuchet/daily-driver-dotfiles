{
"layer": "top",	
"position": "top",
"height": 25,
"modules-left": [
    "idle_inhibitor",
    "sway/workspaces",
    "custom/spacer",
    "memory",
    "custom/spacer",
    "cpu",
    "custom/spacer",
    "temperature",
    "custom/spacer",
    "network",
    "custom/spacer",
    "tray",
    "sway/scratchpad",
    "sway/mode"
],

"modules-center": ["sway/window"],
"modules-right": [
    "power-profiles-daemon",
    "custom/spacer",
    "backlight",
    "custom/spacer",
    "pulseaudio",
    "custom/spacer",
    "battery",
    "custom/spacer",
    "clock#date",
    "custom/spacer",
    "clock#time",
],	

"custom/spacer": {
    "format":"|",
    "tooltip": false
},

"sway/window": {
    "max-length": 45
},

"sway/workspaces": {
	/*"persistent-workspaces": {
	    "1": [],
	    "2": [],
	    "3": [],
	    "4": [],
	    "5": [],
	},*/
    "disable-scroll": true,
    "disable-markup": true,
    "format": "{index}",
    //"format": "{icon}",
    "format-icons": {
        "default": " ",
        "focused": "*"
    }
},

"sway/scratchpad": {
    "format": " {count}"
},

"tray": {
    "icon-size": 19,
    "spacing": 8
},

"clock#date": {
    "format": " {:%a %m/%d}",
    "interval": 1,
    "tooltip": false
},
"clock#time": {
    "format": "󰥔 {:%r}",
    "interval": 1,
    "tooltip": false
},

"memory": {
    "format": "{used}GiB",
    "tooltip-format": "{percentage}% used",
    "interval": 3
},

"cpu": {
    "format": " {usage}%", 
    "interval": 3
},

"battery": {
    "bat": "BAT0",
    "states": {
        "full": 100,
        "normal": 99,
        "critical": 20
    },
    "events": {
        "on-discharging-critical": "notify-send -u critical 'WARNING: Critical Battery!'",
    },
    "format": "{icon} {capacity}%",
    "format-normal": "{icon} {capacity}%",
    "format-full": "󱟢 {capacity}%",
    "format-charging": "󱐥 {capacity}%",
    "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "interval": 10
},

"power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Profile: {profile}\nDriver: {driver}",
    "format-icons": {       
        "default": "bal",
        "performance": "per",
        "balanced:": "bal",
        "power-saver": "sav"
    }
},

"network": {
    "format-wifi": "󰖩 {essid}({signalStrength}%)",
    "format-ethernet": "󰈀 Ethernet",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}\n↓{bandwidthDownBits} ↑{bandwidthUpBits}",
    "format-disconnected": "󰖪  down",
    "family": "ipv4",
    "interval": 3,
    "on-click": "nm-connection-editor;"
},

"temperature": {
	"thermal-zone": 0,
	"format": "{icon} {temperatureC}°C",
	"format-icons":[""],
	"interval": 3
},

"backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["☾", "☼︎", "☀︎", "󰖨"],
    "interval": 60
},

"pulseaudio": {
    "format": "{icon} {volume}%",
    //"format-bluetooth": "󰂯 {volume}%",
    "format-muted":"󰝟 {volume}%",
    "interval": 60,
    "on-click": "pavucontrol",
    "format-icons": {
    "default": ["󰕿", "󰖀", "󰕾"]
    }, 
},

//this cava module for some reason causes my CPU temperature to explode
"custom/cava": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/cava.sh"
},

"idle_inhibitor": {
"format": "{icon} ",
"format-icons": {
    "activated": "",
    "deactivated": ""
    }
},
}
