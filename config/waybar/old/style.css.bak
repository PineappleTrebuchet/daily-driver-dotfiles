@define-color font-color #e6e6e6;
@define-color black #0d0d0d;
@define-color grey #242424;
@define-color light-grey #404040;
@define-color red #ff0000;

* {
  font-family: "BlexMonoNerdFont";
  font-size: 16px;
}


window#waybar { 
  background-color: @black; 
  color: @font-color;
}

tooltip {
	border-radius: 0px;
	border: none;
}

#custom-spacer{
	color: @light-grey;
	font-size: 15px;
	font-family:"JetBrainsMonoNerdFont";
}

#workspaces {
	margin: 0px 3px 0px 0px;
	padding: 0px 0px 0px 0px;
}

#workspaces button {
	transition: none;
	background: transparent;
	padding: 0px 8px 0px 8px;
 	min-width: 1px;
	border-radius: 0px;
}

#workspaces button:not(.empty) { 
	background-color: @grey;
	border-radius: 0px;
}

#workspaces button.focused { 
	background-color: #265273;
	border-radius: 0px;
}

#workspaces button.urgent{
	color: @red;
}

/*kys default hover effects*/
#workspaces button:hover {
	box-shadow: inherit;
	text-shadow: inherit;
	transition: none;
	border-radius: 0px;
}

#mode {
	color: @red;
	padding: 0px 5px 0px 5px;
	margin: 0px 5px 0px 5px;
}

#power-profiles-daemon, #cpu, #memory, #network,
#temperature, #backlight, #pulseaudio, #battery,
#custom-uptime, #clock {
	margin: 0px 7px 0px 7px;
}

#tray {
	margin: 0px 6px 0px 2px;
}

#idle_inhibitor {
	min-width:22px;
	padding: 0px 7px 0px 7px;
}

#scratchpad {
  padding: 0px 4px 0px 4px;
}

#battery.critical:not(.charging), #temperature.critical, #network.disconnected, #pulseaudio.muted {
  color: @red;
}

#custom-cava {
	color: @font-color;
	margin: 0px 8px 0px 8px;
}
